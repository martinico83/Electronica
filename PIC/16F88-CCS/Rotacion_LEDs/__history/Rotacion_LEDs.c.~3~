//Directivas
#include<pic16F88.h>
#fuses xt, nowdt
#use delay(internal=4000000)

#byte TRISA=0x85
#byte PORTA=0x05
#byte TRISB=0x86
#byte PORTB=0x06

//Programa principal
void main (){
   //Configuración de periféricos
   //Configuracion de las GPIOs
   TRISB=0x00; //Puesto B configurado como salida
   bit_set(TRISA,0);// RA0 configurado como entrada
   
   
   //Bucle infinito
   while(1){
   
   }
}
