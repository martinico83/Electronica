//Directivas

#include <16f88.h>
#fuses xt, nowdt

#byte TRISB = 0x87
#byte PORTB = 0x07
//Variables globales


//Interrupciones



//Programa principal
void main (){
   //Configuración de periféricos
   TRISB = 0x00;
   PORTB = 0x00;
   
   
   //Bucle infinito
   while(1){
   PORTB = 0b0000001;
   delay_ms(1000);
   PORTB = 0b0000000;
   delay_ms(1000);   
   }
}
