//Directivas

#include <16f88.h>
#fuses xt, nowdt
#use delay(clock=4M)

#byte TRISA = 0x85
#byte PORTA = 0x05
//Variables globales


//Interrupciones



//Programa principal
void main (){
   //Configuración de periféricos
   TRISA = 0x00;
   PORTA = 0x00;
   
   
   //Bucle infinito
   while(1){
   PORTA = 0b11111111;
   delay_ms(1000);
   PORTA = 0b00000000;
   delay_ms(1000);   
   }
}
